*{
	font-family=sans-serif;
}
.container{
	width:100%;
	height:100vh;
	background-color:#808080;
	display:flex;
	justify-content:center;
	align-items:center;
}
.calculator{
	padding:20px;
	background-color:#00FF00;
	
}
.calculator form input{
	width:60px;
	height:60px;
	cursor:pointer;
	font-size:20px;
	margin:5px 0;
}
form .display{
	padding:40px;
	display:flex;
	justify-content:flex-end;
	margin:20px 0;
}
form .display input{
	flex=1;
	text-align:right;
	font-size:40px;
}
form input.equal{
	width:130px;
}
